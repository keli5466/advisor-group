// Style & animation for the slide-in motion used throughout the site
// slide-in motion the component must have ".slide-in" as a parent class.
//content on the block that fades in
//top-slide is what moves

.stager
	-webkit-backface-visibility hidden
	> div
		transform translateY(50px)

	for i in (1..20)
		> div:nth-child({i})
			opacity 0
			transition transform t-time cubic-bezier(0, 0, 0.2, 1), opacity fade-time ease
			transition-delay 300ms + (i*120)

	&.in-viewport
		> div
				transform translateY(0%)
				opacity 1

@media (max-width mobile)
	.stager
		for i in (1..20)
			> div:nth-child({i})
				opacity 0
				transition transform t-time cubic-bezier(0, 0, 0.2, 1), opacity fade-time ease
				transition-delay 200ms + (i*120)

		&.in-viewport
			> div
					transform translateY(0%)
					opacity 1

.fade-in
	div:not(.slash)
		transition opacity fade-time ease delay-time
		opacity 0
	&.in-viewport
		div:not(.slash)
			opacity 1

.slide-up
	transition transform t-time ease, opacity fade-time ease
	transform translateY(50px)
	opacity 0
	-webkit-backface-visibility hidden
	&.in-viewport
		opacity 1
		transform translateY(0px)

.slide-in
	overflow-y hidden //Needed for Vue-in-vueport so it doesn't go to scroll just because an item isn't in vue yet
	.image
		display flex
		@media (max-width mobile)
			display none
		@media (min-width S)
			position absolute
			top 0
			bottom 0

	.bkgd
		width 100%
		height 100%

	.top-slide
		width 100%
		-webkit-transform-style preserve-3d
		-webkit-backface-visibility hidden
		transition transform t-time easeOutQuart

	&.in-viewport
		.top-slide
			-webkit-transform-style preserve-3d
			-webkit-backface-visibility hidden
			transform translateX(0) !important

//  background
.white .top-slide
	background white

.grey .top-slide
	background light-grey

.white
	.copy-wysiwyg
		background white

.grey
	.copy-wysiwyg
		background light-grey
