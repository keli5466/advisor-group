.site-selector {
	$height = 30px;
	$pad = 10px;
	$dark = #4c4c4c;
	$bkgd = #2E2E2E;

	// Make box
	position: relative;
	height: $height;
	width: 100%;
	background: $bkgd;
	padding: 0 $pad;
	border-top: 1px solid darken($bkgd, 2%);
	box-sizing: border-box;

	// Style the text inside
	font-size: 10px;
	line-height: $height - 2px; // V center
	.prompt {
		color: $dark;
		font-weight: bold;
	}

	// Hover
	transition background 300ms, color 300ms
	&:hover {
		transition background 300ms, color 100ms
		background: lighten($bkgd, 1%);
		color: #eee;
	}

	// Contain the select box so width 100% works
	.select {
		position: absolute;
		z-index: 1;
		left: $pad;
		right: $pad;
		top: 0;
		bottom: 0;

		// Add the arrow icon
		&:before {
			color: $dark;
			content: 'â€º';
			display: block;
			position: absolute;
			font-size: 24px;
			font-weight: normal;
			right: 0;
			top: -1px;
			transform: rotate(90deg);
		}
	}

	// The hidden select menu
	select {
		width: 100%;
		height: 100%;
		font-size: 14px;
		appearance: none;
		opacity: 0;
	}
}
